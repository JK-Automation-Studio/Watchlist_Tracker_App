<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/gray_dark">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMenuBar"
        android:layout_width="match_parent"
        android:layout_height="95sp"
        app:cardBackgroundColor="@color/material_dynamic_primary70" >

        <TextView
            android:id="@+id/textViewAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="48sp"
            android:shadowColor="@color/black"
            android:shadowRadius="5"
            android:text="Playlist Watcher"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:foregroundTint="@color/blue"
        tools:context=".MainActivity" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddListing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="onFabClick"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/material_dynamic_primary50"
        app:backgroundTint="@color/material_dynamic_primary70"
        app:borderWidth="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="95sp"
        android:onClick="onRecyclerClick"
        app:layout_anchorGravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewEmptyList"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150sp"
        android:elevation="3sp"
        android:gravity="center_horizontal"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:text="You don't have any listings.
        Click the plus button to add one!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>